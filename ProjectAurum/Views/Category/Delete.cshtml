@model ProjectAurum.Models.Category.Categorías

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-5">
    <h2 class="text-center">Eliminar Categoría</h2>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="alert alert-warning text-center">
                <p>¿Estás seguro de que quieres eliminar esta categoría?</p>
                <strong>@Model.Nombre</strong>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>


